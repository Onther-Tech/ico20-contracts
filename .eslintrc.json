{
  "root": true,
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "plugin:jsx-a11y/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "plugins": ["standard", "jsx-a11y"],
  "rules": {
    "semi": ["error", "always"],
    // "quotes": [2, "double", { "avoidEscape": true }],
    "comma-dangle": "off",
    "no-console": "off"
  }
}
