{
  "extends": ["solhint:recommended"],
  "rules": {
    "prettier/prettier": "error",
    "avoid-throw": "warn",
    "avoid-suicide": "error",
    "avoid-sha3": "error",
    "compiler-version": "off",
    "reason-string": ["warn",{"maxLength":64}],
    "func-name-mixedcase": "off",
    "no-inline-assembly": "off",
    "indent": 4
  },
  "plugins": ["prettier"]
}